<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>WebPlatformTests</name>
    <description>
        testing cordova against web platform tests
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="http://10.0.2.2:8000" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="http://10.0.2.2:8000" />
    <allow-intent href="http://10.0.2.2:55167" />
    <allow-intent href="http://10.0.2.2:8443" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="http://10.0.2.2:8000/*" />
    <allow-navigation href="about:srcdoc" />
    <allow-navigation href="about:blank" />
    <allow-navigation href="*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <config-file parent="NSPhotoLibraryUsageDescription" target="*-Info.plist">
            <string>We need access to photos to test file inputs</string>
        </config-file>
    </platform>
    <engine name="android" spec="^6.2.3" />
    <engine name="ios" spec="file:///Users/maj/src/cordova-ios" />
    <plugin name="cordova-custom-config" spec="^4.0.2" />
    <plugin name="cordova-plugin-console" spec="^1.0.7" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
</widget>
